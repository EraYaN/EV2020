<Window x:Class="ASIOTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:oxy="http://oxyplot.codeplex.com"
		xmlns:local="clr-namespace:ASIOTest"
        Title="MainWindow" Height="500" Width="500" Closed="Window_Closed">
	
	<Grid>
		<StackPanel>
			<ComboBox Margin="10,10,10,0" VerticalAlignment="Top" Name="ASIODriverComboBox"/>
			<Button x:Name="ASIOTest" Content="ASIOTest" Margin="10,10,10,0" VerticalAlignment="Top" Click="ASIOTest_Click" IsEnabled="False"/>
			<Button x:Name="ASIOShowControlPanel" Content="ASIOCP" Margin="10,10,10,0" VerticalAlignment="Top" Click="ASIOShowControlPanel_Click" IsEnabled="False"/>
			<Button x:Name="ASIOGetData" Content="ASIOGetData" Margin="10,10,10,0" VerticalAlignment="Top" IsEnabled="False" Click="ASIOGetData_Click" />
			<TextBox x:Name="posistionLog" Height="188" TextWrapping="Wrap" Text="" Margin="10,10,10,0" IsReadOnly="True"/>
		</StackPanel>
	</Grid>
</Window>
